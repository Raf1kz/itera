#!/usr/bin/env node
import { spawnSync } from 'node:child_process';
import { readFileSync } from 'node:fs';

const args = process.argv.slice(2);

const command = args[0];

if (command === 'install') {
  console.log('playwright stub: install skipped (offline mode)');
  process.exit(0);
}

if (command === 'test') {
  const buildResult = spawnSync('npm', ['run', 'build'], { stdio: 'inherit' });
  if (buildResult.status !== 0) {
    console.error('playwright stub: build failed');
    process.exit(buildResult.status ?? 1);
  }

  const main = async () => {
    try {
      const html = readFileSync('dist/index.html', 'utf8');
      if (!html || !html.includes('<html')) {
        console.error('playwright stub: invalid build output');
        process.exit(1);
      }
      console.log('playwright stub: smoke test passed');
      process.exit(0);
    } catch (err) {
      console.error('playwright stub: smoke test failed', err);
      process.exit(1);
    }
  };

  main();
} else {
  console.error(`playwright stub: unsupported command "${command}"`);
  process.exit(1);
}
